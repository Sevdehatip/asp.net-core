@using CoreDepartmentApp.Models
@model List<employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.name</td>
            <td>@x.lastname</td>
            <td>@x.city</td>
            <td>@x.department.departmentName</td>
            <td><a href="/employee/RemoveDepartment/@x.id" class="btn btn-danger">SİL</a></td>
            <td><a href="/employee/GetDepartment/@x.id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Depart/NewDepartman" class="btn btn-primary">Yeni Personel Ekle</a>

